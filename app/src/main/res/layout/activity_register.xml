<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Register">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="WELCOME TO MOBIDOC"

        android:textAlignment="center"
        android:textColor="@color/dark_navy_blue"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/LastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Last name"
        android:drawablePadding="9dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />




    <EditText
        android:id="@+id/FirstNameName"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:drawablePadding="9dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />














    <EditText
        android:id="@+id/PhoneNo"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:drawablePadding="9dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:inputType="textPhonetic"
        android:textColor="@android:color/black" />






    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:hint="Email"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="9dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black" />






    <EditText
        android:id="@+id/password"
        android:maxLines="1"
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="9dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/btn_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="420dp"
        android:text="Register"
        app:cornerRadius="40dp"
        app:iconTint="@color/dark_blue"
        android:textColorHighlight="@color/dark_blue"/>

    <TextView
        android:id="@+id/have_accountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:gravity="center"
        android:text="Already have account? Login"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:translationY="-20px" />

    <Switch
        android:id="@+id/userTypeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:text="Patient"
        android:translationY="-200px" />

    <TextView
        android:id="@+id/userTypeSelectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp"
        android:text="Sign up as a:"
        android:translationY="-250px" />

</RelativeLayout>

</ScrollView>
