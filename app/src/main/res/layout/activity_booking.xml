<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Appointment.Booking"
    android:background="@drawable/bg_ui"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Book an Appoinment"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/font_2"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:layout_marginTop="100dp"

        android:background="@drawable/recycler">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:maxLines="1"
            android:text="Pick a date and Time"
            android:gravity="center_horizontal"
            android:fontFamily="@font/font_2"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark_navy_blue" />
        <TextView
            android:id="@+id/Date"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
        android:hint="Date"
            android:gravity="center"
            android:fontFamily="@font/font_2"
            android:background="@drawable/recycler"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/Time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/recycler"
            android:maxLines="1"
            android:hint="time"
            android:gravity="center"
            android:fontFamily="@font/font_2"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:id="@+id/_Book"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Book"
            android:fontFamily="@font/font_2"
            android:textColorHighlight="@color/dark_blue"
            app:cornerRadius="40dp"
            app:iconTint="@color/light_blue"
            android:background="@android:color/holo_red_light"/>

    </LinearLayout>

</LinearLayout>