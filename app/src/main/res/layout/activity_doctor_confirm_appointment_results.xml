<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.Appointment.DoctorConfirmAppointmentResults">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/headingTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_2"

            android:gravity="center"
            android:text="WELCOME TO MOBIDOC"
            android:textAlignment="center"
            android:textColor="@color/dark_navy_blue"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/appointmentCostET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_medication"
            android:drawablePadding="9dp"
            android:fontFamily="@font/font_2"
            android:hint="Appointment Cost"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:translationY="170dp" />


        <EditText
            android:id="@+id/newMedicationET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_disease"
            android:drawablePadding="9dp"
            android:fontFamily="@font/font_2"
            android:hint="New Medication"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:translationY="120dp" />


        <Button
            android:id="@+id/confirmBTN"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:fontFamily="@font/font_2"
            android:text="Confirm"
            android:textColorHighlight="@color/dark_blue"
            android:translationY="300dp"
            app:cornerRadius="40dp"
            app:iconTint="@color/dark_blue" />
        <Button
            android:id="@+id/backBTN"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Back"
            android:textColorHighlight="@color/dark_blue"
            app:cornerRadius="40dp"
            android:fontFamily="@font/font_2"
            app:iconTint="@color/dark_blue"
            android:translationY="100dp"
            />

        <TextView
            android:id="@+id/haveAccountTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="530dp"
            android:fontFamily="@font/font_2"
            android:gravity="center"
            android:text="Already have account? Login"
            android:textAlignment="center"
            android:textColor="#8BC34A"
            android:translationY="160dp"
            android:visibility="invisible" />



    </RelativeLayout>

</ScrollView>
