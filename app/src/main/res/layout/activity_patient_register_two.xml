<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="WELCOME TO MOBIDOC"

            android:textAlignment="center"
            android:textColor="@color/dark_navy_blue"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/medicationHistoryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="9dp"
            android:hint="Medication History"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/diseaseHistoryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="9dp"
            android:hint="Disease Histroy"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:translationY="-200px" />


        <EditText
            android:id="@+id/allergiesET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="9dp"
            android:hint="Allergies"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@android:color/black" />


        <Button
            android:id="@+id/registerBTN"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:layout_marginTop="890dp"
            android:text="Register"
            android:textColorHighlight="@color/dark_blue"
            app:cornerRadius="40dp"
            app:iconTint="@color/dark_blue" />

        <TextView
            android:id="@+id/haveAccountTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"
            android:gravity="center"
            android:text="Already have account? Login"
            android:textAlignment="center"
            android:textColor="#8BC34A"
            android:translationY="-20px" />

        <Button
            android:id="@+id/cancelBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:translationY="1400px" />

    </RelativeLayout>

</ScrollView>
